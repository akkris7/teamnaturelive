<div class="blog-item blog-item-{{ forloop.index }}">

  
  {% if article.image %}
  <div class="blog-image">
    <a href="{{ article.url }}">
      <img class="img-responsive" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}" />
    </a>
    
  </div>
  {% endif %}
  

  <div class="blog-info">
    
    <div class="item-right">
      <h3 class="blog-title text-truncate"><a href="{{ article.url }}">{{ article.title }}</a></h3>
      <div class="blog-decs">
        {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
        {% else %}
        {{ article.content | strip_html | truncatewords: 14 }}
        {% endif %}
      </div>
      
      <div class="media-date-added">
        <span class="date">{{ article.published_at | date: "%b %d, %Y"}}</span>
      </div>
   
    </div>                               
  </div>
</div>