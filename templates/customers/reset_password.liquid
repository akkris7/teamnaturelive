{% include 'breadcrumb' %}
<div class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="form-vertical well">
        {% form 'reset_customer_password' %}

        <h1 class="page-title">{{ 'customer.reset_password.title' | t }}</h1>

        <p class="r">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}
        <div class="form-group">
          <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="form-control{% if form.errors contains 'password' %} input--error{% endif %}">
        </div>
        <div class="form-group">
          <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-control{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
        </div>
        <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
        {% endform %}
      </div>

    </div>
  </div>
</div>
