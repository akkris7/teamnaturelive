

{%- assign typeproduct 			= settings.product_layout -%}
{%- assign sidebar 					= settings.enable_product_sidebar -%}
{%- assign sidebar_position 		= settings.sidebar_position -%}

{% include 'breadcrumb' %}

{% if typeproduct == '2col_left' %}
<div class="container positon-sidebar">
  <div class="row">
    
    <div class="sidebar-overlay"></div>
    <div class="col-main col-xl-9 offset-xl-3">
      <a href="javascript:void(0)" class="open-sidebar d-lg-none"><i class="fa fa-bars"></i> Sidebar</a>
      {% section 'product-template' %}
    </div>
  </div>
</div>
{% elsif typeproduct == '2col_right' %}
<div class="container positon-sidebar">
  <div class="row">
    <div class="col-main col-lg-9 col-12">
      <a href="javascript:void(0)" class="open-sidebar d-lg-none"><i class="fa fa-bars"></i> Sidebar</a>
      {% section 'product-template' %}
    </div>
    <div class="col-sidebar sidebar-fixed col-lg-3">
      {% include 'sidebar-collection' %}
    </div>
    <div class="sidebar-overlay"></div>
  </div>
</div>
{% elsif typeproduct == '1col' %}
<div class="container{% if typeproduct == '1col' %} layout_scroll{% endif %}">
  <div class="col-main col-full">
    {% section 'product-template' %}
  </div>
</div>
{% else %}
<div class="container">
  <div class="col-main col-full">
    {% section 'product-template' %}
  </div>
</div>
{% endif %}

<script>
  $(".open-sidebar").click(function(e){

    $(".sidebar-overlay").toggleClass("show");
    $(".sidebar-fixed").toggleClass("active");
  });
  $( ".open-fiter" ).click(function() {
    $('.sidebar-fixed').slideToggle(200);
    $(this).toggleClass('active');
  });
  $(".sidebar-overlay").click(function(e){

    $(".sidebar-overlay").toggleClass("show");
    $(".sidebar-fixed").toggleClass("active");
  });
  $('#close-sidebar').click(function() {
    $('.sidebar-overlay').removeClass('show');
    $('.sidebar-fixed').removeClass('active');

  }); 
</script>




