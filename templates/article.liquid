{% include 'breadcrumb' %}
<div class="container{% if sidebar %} positon-sidebar{% endif %}">
  {% if sidebar and sidebar_position == 'left' %}
  <div class="row">
    <div class="col-sidebar sidebar-fixed col-lg-3">
      {% include 'sidebar-collection' %}
    </div>
    <div class="sidebar-overlay"></div>
    <div class="col-main col-lg-9 col-12">
      <a href="javascript:void(0)" class="open-sidebar d-lg-none"><i class="fa fa-bars"></i> Sidebar</a>
      <div class="article-detail">
        <article class="article" itemscope itemtype="http://schema.org/Article">
          <div class="article-info">
            {% section 'article-template' %}
          </div>
        </article>
        
{% if blog.comments_enabled? %}
{% if number_of_comments > 0 %}
<hr>

<div class="row">
  <div class="col-md-12">
    <h2 class="comment-title">{{ 'blogs.comments.comments_with_count' | t: count: number_of_comments }}</h2>

    {% paginate article.comments by 5 %}
    <div id="comments">
      {% if new_comment %}
      <p class="note form-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        {% if blog.moderated? %}
        {{ 'blogs.comments.success_moderated' | t }}
        {% else %}
        {{ 'blogs.comments.success' | t }}
        {% endif %}
      </p>
      {% endif %}

      <ul class="comments">
        {% if new_comment %}
        <li id="{{ comment.id }}" class="comment clearfix">
          <div class="icon-user">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
          </div>
          {% include 'comment' %}
        </li>
        {% endif %}

        {% for comment in article.comments %}
        {% unless comment.id == new_comment_id %}
        <li id="{{ comment.id }}" class="comment clearfix">
          <div class="icon-user">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
          </div>
          {% include 'comment' %}
        </li>
        {% endunless %}
        {% endfor %}
      </ul>

      {% if paginate.pages > 1 %}
      {% include 'pagination' %}
      {% endif %}

    </div>
    {% endpaginate %}
  </div>
</div>

{% endif %}

<hr>


